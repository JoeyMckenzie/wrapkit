{
    "name": "joeymckenzie/wrapkit",
    "description": "A utility package for connecting to HTTP APIs with PHP.",
    "keywords": [
        "http-client",
        "api-wrapper"
    ],
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Wrapkit\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Joey McKenzie",
            "email": "joey.mckenzie27@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=8.4",
        "php-http/discovery": "^1.20",
        "php-http/multipart-stream-builder": "^1.4",
        "psr/http-client": "^1.0",
        "psr/http-client-implementation": "^1.0",
        "psr/http-factory-implementation": "^1.0",
        "psr/http-message": "^2.0"
    },
    "require-dev": {
        "pestphp/pest": "^3.8",
        "rector/rector": "^2.1",
        "laravel/pint": "^1.22",
        "phpstan/phpstan": "^2.1",
        "phpstan/phpstan-strict-rules": "^2.0",
        "phpstan/phpstan-deprecation-rules": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0",
        "phpstan/extension-installer": "^1.4",
        "guzzlehttp/guzzle": "^7.9",
        "vlucas/phpdotenv": "^5.6",
        "mockery/mockery": "^1.6",
        "pestphp/pest-plugin-watch": "^3.0",
        "peckphp/peck": "^0.1.3",
        "pestphp/pest-plugin-type-coverage": "^3.5"
    },
    "scripts": {
        "prepare": "git config core.hookspath .githooks",
        "test": "vendor/bin/pest --parallel",
        "test:watch": "vendor/bin/pest --parallel --watch",
        "test:coverage": "vendor/bin/pest --coverage --parallel",
        "test:watchmu": "vendor/bin/pest --watch --parallel --mutate",
        "test:types": "vendor/bin/pest --type-coverage --min=100",
        "test:mutate": "vendor/bin/pest --mutate --min=100 --parallel",
        "test:ci": [
            "@test:coverage",
            "@test:mutate",
            "@test:types"
        ],
        "fmt": "vendor/bin/pint",
        "fmt:test": "vendor/bin/pint --test",
        "lint": "XDEBUG_MODE=off vendor/bin/phpstan analyze",
        "lint:clear": "vendor/bin/phpstan clear-result-cache",
        "refactor": "vendor/bin/rector process",
        "refactor:test": "vendor/bin/rector process --dry-run",
        "typos": "vendor/bin/peck",
        "check": [
            "@test",
            "@fmt:test",
            "@lint",
            "@refactor:test",
            "@typos"
        ],
        "fix": [
            "@refactor",
            "@fmt"
        ],
        "prep": [
            "@fix",
            "@check"
        ],
        "ci": [
            "@lint",
            "@fmt:test",
            "@refactor:test",
            "@test:ci",
            "@typos"
        ]
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true,
            "phpstan/extension-installer": true
        }
    }
}
